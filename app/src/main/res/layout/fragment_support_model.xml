<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">

            <View
                android:id="@+id/view4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundimage" />

            <ProgressBar
                android:id="@+id/onboarding_activity_progress_bar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:max="100"
                android:padding="15dp"
                android:progressDrawable="@drawable/progressbar_onboarding_view"
                android:rotation="-90"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/precentage_value3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="152.5dp"
                android:layout_marginTop="105dp"
                android:gravity="center|center_horizontal"
                android:text="48%"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/onboarding_activity_progress_bar2"
                app:layout_constraintStart_toStartOf="@+id/onboarding_activity_progress_bar2"
                app:layout_constraintTop_toTopOf="@+id/onboarding_activity_progress_bar2" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="136.5dp"
                android:layout_marginTop="10dp"
                android:gravity="center|center_horizontal"
                android:text="Данные"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/onboarding_activity_progress_bar2"
                app:layout_constraintStart_toStartOf="@+id/onboarding_activity_progress_bar2"
                app:layout_constraintTop_toTopOf="@+id/onboarding_activity_progress_bar2" />

            <TextView
                android:id="@+id/textViewDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="115dp"
                android:layout_marginTop="215dp"
                android:gravity="center|center_horizontal"
                android:text="Эффективность"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/onboarding_activity_progress_bar2"
                app:layout_constraintStart_toStartOf="@+id/onboarding_activity_progress_bar2"
                app:layout_constraintTop_toTopOf="@+id/onboarding_activity_progress_bar2" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Результат:"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Плохой"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Ваш результат является отчетом и анализом ваших целей и завершенных задач. Вы часто пропускаете, и забываете про ваши задачи, или же не делаете их во время, возможно у вас внутренние проблемы. "
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="По этой причине, от нашей команды мы предлагаем вам помощь. Это метод - &quot;Лестница&quot;, чтобы подробнее узнать перейдите по кнопке."
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/clickBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_button"
            android:gravity="center"
            android:text="Нажми на меня"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <View
        android:id="@+id/view6"
        android:layout_width="400dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:background="@drawable/round_button" />
</RelativeLayout>